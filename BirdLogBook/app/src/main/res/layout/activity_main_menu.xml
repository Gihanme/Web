<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.birdlogbook.sajja.birdlogbook.view.MainMenuActivity">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newLogNoteButton"
            android:background="@drawable/newnoten"
            android:layout_alignTop="@+id/cameraButton"
            android:layout_toEndOf="@+id/cameraButton"
            android:layout_marginStart="13dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cameraButton"
            android:background="@drawable/cami"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="91dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapBtn"
            android:background="@drawable/mapicon"
            android:layout_alignTop="@+id/newLogNoteButton"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logBookButton"
            android:background="@drawable/lognotelibiconn"
            android:layout_below="@+id/newLogNoteButton"
            android:layout_toStartOf="@+id/newLogNoteButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/galleryButton"
            android:background="@drawable/galleryn"
            android:layout_below="@+id/newLogNoteButton"
            android:layout_alignStart="@+id/newLogNoteButton" />

        <Button
            android:id="@+id/btn_launch_reporter"
            android:text="Start reporter"
            android:onClick="startReporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logOutBtn"
            android:src="@drawable/log_out"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


</RelativeLayout>
